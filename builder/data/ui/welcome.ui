<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  
  <object class="AdwToolbarView" id="welcome_view">
    <child type="top">
      <object class="AdwHeaderBar">
        <property name="show-title">false</property>
        <property name="show-end-title-buttons">false</property>
        <property name="show-start-title-buttons">false</property>
        <child type="end">
          <object class="GtkButton" id="close_welcome_button">
            <property name="icon-name">window-close-symbolic</property>
            <property name="tooltip-text">Close</property>
            <style>
              <class name="flat"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    
    <property name="content">
      <object class="AdwClamp">
        <property name="maximum-size">800</property>
        <property name="vexpand">true</property>
        
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <property name="margin-top">0</property>
            <property name="margin-bottom">0</property>
            <property name="margin-start">0</property>
            <property name="margin-end">0</property>
            <property name="valign">center</property>
            
            <!-- Status Page -->
            <child>
              <object class="AdwStatusPage">
                <property name="icon-name">package-x-generic-symbolic</property>
                <property name="title">Obision Package Builder</property>
                <property name="description">Create installer packages for your applications</property>
                <style>
                    <class name="compact"/>
                </style>
              </object>
            </child>
            
            <!-- Action Buttons -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">12</property>
                <property name="halign">center</property>
                <property name="homogeneous">true</property>
                
                <child>
                  <object class="GtkButton" id="new_project_button">
                    <property name="label">New Project</property>
                    <property name="width-request">160</property>
                    <property name="height-request">50</property>
                    <style>
                      <class name="suggested-action"/>
                      <class name="pill"/>
                    </style>
                  </object>
                </child>
                
                <child>
                  <object class="GtkButton" id="open_project_button">
                    <property name="label">Open Project</property>
                    <property name="width-request">160</property>
                    <property name="height-request">50</property>
                    <style>
                      <class name="pill"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            
            <!-- Recent Projects (Optional) -->
            <child>
              <object class="GtkBox" id="recent_projects_box">
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <property name="visible">false</property>
                
                <child>
                  <object class="GtkLabel">
                    <property name="label">Recent Projects</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="heading"/>
                    </style>
                  </object>
                </child>
                
                <child>
                  <object class="GtkListBox" id="recent_projects_list">
                    <property name="selection-mode">none</property>
                    <style>
                      <class name="boxed-list"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </object>
</interface>
